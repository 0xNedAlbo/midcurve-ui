{
  "name": "@midcurve/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:pretty": "next dev -p 3000 | pino-pretty",
    "build": "npm run prisma:migrate:deploy && next build",
    "start": "next start -p 3000",
    "prisma:migrate:deploy": "echo 'Applying database migrations...' && prisma migrate deploy && echo 'âœ“ Migrations applied successfully'",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:trace": "playwright show-trace",
    "test:api": "vitest",
    "test:api:run": "vitest run",
    "postinstall": "npm run prisma:sync && prisma generate",
    "prisma:sync": "bash scripts/sync-prisma-schema.sh",
    "prisma:generate": "npm run prisma:sync && prisma generate",
    "db:dev:up": "cd ../midcurve-services && docker-compose -f docker-compose.dev.yml up -d",
    "db:dev:down": "cd ../midcurve-services && docker-compose -f docker-compose.dev.yml down",
    "db:dev:reset": "cd ../midcurve-services && docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up -d",
    "yalc:link": "yalc link @midcurve/shared && yalc link @midcurve/services && yalc link @midcurve/api-shared && npm install",
    "yalc:link:api-shared": "yalc link @midcurve/api-shared && npm install",
    "yalc:link:services": "yalc link @midcurve/services && npm install",
    "yalc:link:shared": "yalc link @midcurve/shared && npm install",
    "yalc:update": "yalc update",
    "yalc:unlink": "yalc remove @midcurve/shared && yalc remove @midcurve/services && yalc remove @midcurve/api-shared && npm install",
    "yalc:clean": "rimraf .yalc yalc.lock"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.0",
    "@cowprotocol/widget-lib": "^0.20.0",
    "@cowprotocol/widget-react": "^0.14.0",
    "@midcurve/api-shared": "github:0xNedAlbo/midcurve-api-shared#main",
    "@midcurve/services": "github:0xNedAlbo/midcurve-services#main",
    "@midcurve/shared": "github:0xNedAlbo/midcurve-shared#main",
    "@prisma/client": "^6.17.1",
    "@rainbow-me/rainbowkit": "^2.2.9",
    "@tailwindcss/postcss": "^4.0.0",
    "@tanstack/react-query": "^5.87.1",
    "@tanstack/react-query-devtools": "^5.87.3",
    "@uniswap/sdk-core": "^7.7.2",
    "@uniswap/v3-sdk": "^3.25.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ethers": "^6.13.4",
    "jsbi": "^4.3.2",
    "lucide-react": "^0.542.0",
    "nanoid": "^5.1.6",
    "next": "15.5.2",
    "next-auth": "^5.0.0-beta.25",
    "pino": "^9.9.5",
    "pino-http": "^10.5.0",
    "postcss": "^8",
    "prisma": "^6.17.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-is": "^18.3.1",
    "recharts": "^3.1.2",
    "siwe": "^3.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.0",
    "tw-animate-css": "^1.3.8",
    "use-debounce": "^10.0.6",
    "viem": "^2.37.3",
    "wagmi": "^2.16.9",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "pino-pretty": "^13.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
